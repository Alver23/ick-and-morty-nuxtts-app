{
  "name": "rick-and-morty-nuxt-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "DEBUG=rick-and-morty-nuxt-app:* gulp",
    "build": "nuxt build src/client",
    "start": "nuxt start",
    "lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"src/client/**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
    "lint:prettier": "prettier --check .",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lintfix": "prettier --write --list-different . && npm run lint:js -- --fix && npm run lint:style -- --fix",
    "prepare": "husky install",
    "test": "jest --logHeapUsage",
    "test:watch": "npm test -- --verbose --watch",
    "env:add": "rimraf .env && touch .env",
    "env:dev": "npm run env:add && cp ./environments/.env.development .env",
    "env:prod": "npm run env:add && cp ./environments/.env.production .env"
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue}": "eslint --cache",
    "src/client/**/*.{css,scss,sass,html,vue}": "stylelint",
    "*.**": "prettier --check --ignore-unknown"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/pwa": "^3.3.5",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.19.3",
    "debug": "^4.3.3",
    "dotenv": "^11.0.0",
    "express": "^4.17.2",
    "express-healthcheck": "^0.1.0",
    "module-alias": "^2.2.2",
    "nuxt": "^2.15.8",
    "vue": "^2.6.14",
    "vue-server-renderer": "^2.6.14",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^4.46.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@nuxt/types": "^2.15.8",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^8.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.1.0",
    "@nuxtjs/tailwindcss": "^4.2.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/gulp": "^4.0.9",
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.11",
    "@vue/test-utils": "^1.3.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^27.4.4",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^3.1.0",
    "eslint-plugin-vue": "^8.3.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-shell": "^0.8.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "lint-staged": "^12.1.2",
    "node-notifier": "^10.0.0",
    "postcss": "^8.4.4",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^24.0.0",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "vue-jest": "^3.0.4"
  },
  "_moduleAliases": {
    "@server": "build-server/src/server",
    "@shared": "build-server/src/shared"
  }
}
